{
  "name": "slack-action",
  "description": "GitHub Action to send Slack notifications about your pipelines progress.",
  "version": "1.2.0",
  "author": {
    "name": "Victor Popkov",
    "email": "victor@popkov.me"
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@slack/bolt": "^3.17.0",
    "sprintf-js": "^1.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/sprintf-js": "^1.1.4",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "yarn-audit-fix": "^10.0.7",
    "yarn-deduplicate": "^6.0.2"
  },
  "homepage": "https://github.com/codedsolar/slack-action#readme",
  "keywords": [
    "github-action",
    "slack",
    "slack-action"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "github:codedsolar/slack-action"
  },
  "scripts": {
    "audit:fix": "yarn-audit-fix",
    "build": "tsc && ncc build",
    "ci:test": "yarn test --ci --reporters='./.github/jest-output.js'",
    "clean": "rm -Rf ./coverage/ ./lib/",
    "deduplicate": "yarn-deduplicate && yarn install --ignore-scripts",
    "lint": "eslint --ext='js,ts' . && prettier --check .",
    "prepare": "npm run build",
    "test": "jest --coverage"
  },
  "types": "src/types/index.d.ts"
}
